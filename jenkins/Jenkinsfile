pipeline {
    agent any

    environment {
       ACR_NAME = "myacrname123.azurecr.io"
       IMAGE_NAME = "hello-world"
       IMAGE_TAG = "v1"
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
         stage('Verify Docker Installation') {
            steps {
                script {
                    sh 'docker --version'
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    echo "Building image: ${ACR_NAME}/${IMAGE_NAME}:${IMAGE_TAG}"
                    sh "docker buildx build --t TAG ${ACR_NAME}/${IMAGE_NAME}:${IMAGE_TAG} -f application/Dockerfile application"
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
